{
  "name": "multi-electron",
  "version": "0.1.0",
  "private": true,
  "main": "src/main/main.js",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "dev": "concurrently npm:start \"npx wait-on http://127.0.0.1:3000/ && npm run electron-watch\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "electron-start": "electron .",
    "electron-watch": "nodemon --exec electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "nodemon": "^2.0.19",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "cstjean.multiplateforme.mirror",
    "copyright": "Copyright Â© 2022 Bilodeau-Gagnon-Tram",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "zip"
    },
    "linux": {
      "category": "Utility"
    }
  }
}
